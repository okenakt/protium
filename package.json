{
  "name": "protium",
  "displayName": "Protium",
  "description": "Interactive Python environment for VS Code with flexible execution in your workflow",
  "version": "1.0.3",
  "publisher": "okenakt",
  "icon": "./images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/okenakt/protium.git"
  },
  "bugs": {
    "url": "https://github.com/okenakt/protium/issues"
  },
  "homepage": "https://github.com/okenakt/protium#readme",
  "keywords": [
    "python",
    "jupyter",
    "ipython",
    "repl",
    "interactive",
    "execution",
    "kernel",
    "notebook"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "protium-panel",
          "title": "Protium",
          "icon": "./images/icon.png"
        }
      ],
      "activitybar": [
        {
          "id": "protium-sidebar",
          "title": "Protium Watch List",
          "icon": "./images/icon.png"
        }
      ]
    },
    "views": {
      "protium-panel": [
        {
          "type": "webview",
          "id": "protium.kernelMonitor",
          "name": "Kernel Monitor",
          "icon": "./images/icon.png"
        }
      ],
      "protium-sidebar": [
        {
          "type": "webview",
          "id": "protium.watchList",
          "name": "Watch List",
          "icon": "./images/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "protium.executeAndMoveNext",
        "title": "Execute Code and Move Next",
        "category": "Protium"
      },
      {
        "command": "protium.executeInPlace",
        "title": "Execute Code in Place",
        "category": "Protium"
      },
      {
        "command": "protium.interruptExecution",
        "title": "Interrupt Execution",
        "category": "Protium"
      },
      {
        "command": "protium.connectToExistingKernel",
        "title": "Connect to Existing Kernel",
        "category": "Protium"
      },
      {
        "command": "protium.clearResults",
        "title": "Clear Results",
        "category": "Protium"
      },
      {
        "command": "protium.restartKernel",
        "title": "Restart Kernel",
        "category": "Protium"
      },
      {
        "command": "protium.shutdownKernel",
        "title": "Shutdown Kernel",
        "category": "Protium"
      },
      {
        "command": "protium.showKernelMonitor",
        "title": "Show Kernel Monitor",
        "category": "Protium"
      },
      {
        "command": "protium.showWatchList",
        "title": "Show Watch List",
        "category": "Protium"
      }
    ],
    "keybindings": [
      {
        "key": "shift+enter",
        "command": "-python.execSelectionInTerminal",
        "when": "editorTextFocus && editorLangId == 'python' && !notebookEditorFocused"
      },
      {
        "key": "shift+enter",
        "command": "protium.executeAndMoveNext",
        "when": "editorTextFocus && editorLangId == 'python' && !notebookEditorFocused && protium.active"
      },
      {
        "key": "ctrl+enter",
        "command": "protium.executeInPlace",
        "when": "editorTextFocus && editorLangId == python && protium.active"
      },
      {
        "key": "ctrl+shift+c",
        "command": "protium.interruptExecution",
        "when": "editorTextFocus && editorLangId == python && protium.active"
      },
      {
        "key": "ctrl+backspace",
        "command": "protium.clearResults",
        "when": "editorTextFocus && editorLangId == python && protium.active"
      }
    ],
    "configuration": {
      "title": "Protium",
      "properties": {
        "protium.resultDisplay.maxLines": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 1000,
          "description": "Maximum number of lines to display in a result block"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./ && cp -r src/templates out/",
    "check-types": "tsc --noEmit",
    "package": "npm run clean && npm run check-types && node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/run-test.js"
  },
  "dependencies": {
    "@jupyterlab/services": "^7.4.6",
    "@vscode/codicons": "^0.0.41",
    "uuid": "^10.0.0",
    "zeromq": "^6.5.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.17.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "^5.7.2"
  },
  "prettier": {
    "organizeImportsSkipDestructiveCodeActions": true,
    "plugins": [
      "prettier-plugin-organize-imports"
    ],
    "quoteProps": "consistent"
  }
}
